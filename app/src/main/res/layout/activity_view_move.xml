<?xml version="1.0" encoding="utf-8"?>
<com.example.viewmovedaemon.view.CustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文本"
        android:visibility="gone" />

    <com.example.viewmovedaemon.view.DragView
        android:id="@+id/dragView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#e6b0b0" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击" />

</com.example.viewmovedaemon.view.CustomLinearLayout>
